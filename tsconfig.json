{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true, // Changed to true for better module interop
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "types": ["node", "swr"], // Added "swr" for SWR type declarations
    "paths": {
      "@components/*": ["components/*"], // Example alias; adjust as needed
      "@utils/*": ["utils/*"]
    }
  },
  "exclude": ["node_modules", "dist", "build"], // Explicitly exclude build-related directories
  "include": ["src", "**/*.ts", "**/*.tsx", "src/**/*", "electron"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
